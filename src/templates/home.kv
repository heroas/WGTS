                #     on_release: root.remove_accord_test()
                # MDRaisedButton:
                #     text: 'add'
                #     on_release: root.add_accord_test()
        BoxLayout:
            size_hint: (.4,1)
            id: accord_box
            MDAccordion:
                id: home_anime_list
                orientation: 'vertical'
                do_scroll_x: 'true'
