<Home>:
    name: 'home'
    BoxLayout:
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint: (.6,1)
            BoxLayout:
                size_hint: (1,.1)
                MDLabel:
                    size_hint: (.8,1)
                    text: 'Welcome to '+ gl.SEASON_NAME
                    font_style: "Display2"
                MDSpinner:
                    id: home_spinner
                    size_hint: None,None
                    pos_hint: {'center_x': 0.1,'center_y': 0.1}
                    active: False
            BoxLayout:
                size_hint: (.7,.2)
                MDRaisedButton:
                    text: 'Criterea Selection'
                    on_release: app.navigate('criterea_selection')
                    pos_hint: {'center_x': 0.1,'center_y': 0.5}
                MDLabel:
                    text: '  to get started'
                    font_style: "Title"
            BoxLayout:
                size_hint: (1,.5)
                MDCard:
            BoxLayout:
                size_hint: (1,.3)
                # MDRaisedButton:
                #     text: 'Load Anime'
                #     on_release: root.load()
