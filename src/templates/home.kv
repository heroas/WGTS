<Home>:
    name: 'home'
    BoxLayout:
        spacing: 10
        BoxLayout:
            MDRaisedButton:
                text: 'Load Anime'
                on_release: root.load_db()
            MDRaisedButton:
                text: 'Load nyaapy'
                on_release: root.testin_nyaapy()

        BoxLayout:
            MDAccordion:
                id: ani_list
                orientation: 'vertical'
                do_scroll_x: 'true'
                md_bg_color: gl.SEASON_COLOR
                specific_text_color: get_color_from_hex('#000000')
