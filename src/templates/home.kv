<Home>:
    name: 'home'
    BoxLayout:
        spacing: 10
        BoxLayout:
            padding: 5
            orientation: 'vertical'
            size_hint: (.6,1)
            BoxLayout:
                size_hint: (1,.1)
                MDLabel:
                    size_hint: (1,1)
                    text: 'Welcome to '+ gl.SEASON_NAME
                    font_style: "Display2"
                    halign: 'center'
                # MDSpinner:
                #     id: home_spinner
                #     size_hint: None,None
                #     pos_hint: {'center_x': 0.1,'center_y': 0.1}
                #     active: False
            # BoxLayout:
            #     size_hint: (1,.2)
            #     MDRaisedButton:
            #         text: 'Criterea Selection'
            #         halign: 'center'
            #         on_release: app.navigate('criterea_selection')
            #         pos_hint: {'center_x':1,'center_y': 0.5}
            #     MDLabel:
            #         halign: 'center'
            #         text: 'to get started'
            #         font_style: "Title"
            BoxLayout:
                size_hint: (1,.35)
                orientation: 'vertical'
                spacing: 20
                MDCard:
                    padding: 5
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Custom torrent search'
                        size_hint_y: .5
                        halign: 'center'
                        font_style: 'Headline'
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    BoxLayout:
                        padding: 30
                        MDTextField:
                            id: custom_search
                            hint_text: "search for anything specific you're looking for!"
                    MDRaisedButton:
                        size_hint_y: .2
                        text: 'Search'
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        on_release: root.open_episode_page_with_string(custom_search.text)

                MDRaisedButton:
                    id: back_btn
                    text: "Load List"
                    size_hint: (.2, .2)
                    pos_hint: {'center_x': 0.95, 'center_y': 0.9}
                    on_release: root.load_list()

            BoxLayout:
                size_hint: (1,.3)
                orientation: 'vertical'
                MDSpinner:
                    size_hint: None, None
                    id: home_spinner
                    size: '150dp', '150dp'
                    active: False
                    pos_hint: {'center_x': 0.5,'center_y': 0.25}
                    # active: True
                # MDRaisedButton:
                #     text: 'testcurrep'
                #     on_release: root.get_curr()
                # MDRaisedButton:
                #     text: 'Load nyaapy'
                #     on_release: root.testin_nyaapy()
                # MDRaisedButton:
                #     text: 'remove'
                #     on_release: root.remove_accord_test()
                # MDRaisedButton:
                #     text: 'add'
                #     on_release: root.add_accord_test()
                # MDRaisedButton:
                #     text: 'add item'
                #     on_release: root.add_item_accord_test()
        BoxLayout:
            size_hint: (.4,1)
            id: accord_box
            MDAccordion:
                id: home_anime_list
                orientation: 'vertical'
                do_scroll_x: 'true'
                MDAccordionItem:
                    icon: 'help'
                    title: "This is where you're watchlist will show."
                    MDAccordionSubItem:
                        text: 'Get started by going to the criterea selection screen, or loading an existing list'
