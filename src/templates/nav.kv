NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerIconButton:
            icon: 'home'
            text: "Home"
            on_release: app.root.ids.scr_mngr.current = 'home'
        NavigationDrawerIconButton:
            icon: 'settings'
            text: "Criterea Selection"
            on_release: app.root.ids.scr_mngr.current = 'criterea_selection'
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'Whats Good this Season?'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            Home:
                name: 'home'
                id: home
            Criterea_Selection:
                name: 'criterea_selection'
                id: crits
